            </DataGrid.Columns>-->

        <Button Content="Reset" HorizontalAlignment="Left" Margin="10,0,0,7" VerticalAlignment="Bottom" Width="60"/>
        <Button x:Name="ButtonOK" Content="OK" HorizontalAlignment="Right" Margin="0,0,142,7" VerticalAlignment="Bottom" Width="60" Click="ButtonOK_Click"/>
        <Button x:Name="ButtonApply" Content="Apply" HorizontalAlignment="Right" Margin="0,0,77,7" VerticalAlignment="Bottom" Width="60" Click="ButtonApply_Click"/>
        <Button x:Name="ButtonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,12,7" VerticalAlignment="Bottom" Width="60" Click="ButtonCancel_Click"/>
        <CheckBox x:Name="CheckboxRegisterHotkeys" Content="Register hotkeys" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

