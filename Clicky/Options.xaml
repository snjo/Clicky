                <DataGridCheckBoxColumn CanUserResize="False" CanUserSort="False" CanUserReorder="False" Header="Alt" Width="50"/>
                <DataGridCheckBoxColumn CanUserResize="False" CanUserSort="False" CanUserReorder="False" Header="Shift" Width="50"/>
